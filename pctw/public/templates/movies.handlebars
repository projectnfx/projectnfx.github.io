<div id="movies">
    <div class="row">

        {{#each this}}
            <div class="col-sm-4">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{title_long}}</h3>
                    </div>
                    <div class="panel-body">

                        <div class="media movie">
                            <a class="pull-left" href="#">
                                <img class="media-object" src="{{ medium_cover_image }}" alt="{{ title }}">
                            </a>

                            <div class="media-body">
                                <p>

                                <div class="btn-group">
                                    <button class="btn btn-md btn-warning dropdown-toggle" data-toggle="dropdown">
                                        <span>Play Movie</span>
                                    </button>

                                    <button class="btn btn-md btn-warning dropdown-toggle"
                                            data-toggle="dropdown">
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        {{#each this.torrents}}
                                            <li>
                                                <a href="#/watch/{{../title}}/{{hash}}">{{quality}}</a>
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                </p>

                                <p><a class="btn btn-sm btn-default"
                                      href="http://www.imdb.com/title/{{imdb_code}}"
                                      target="_blank"><span class="glyphicon glyphicon-facetime-video"></span> IMDB</a>
                                </p>

                                <div class="well well-sm">
                                    Rating: {{rating}}<br>
                                    Genre: {{genres}}<br>
                                    Health:
                                    {{#with this.torrents.[0]}}
                                        <span class="label label-default">S: {{seeds}}</span>
                                        <span class="label label-default">P: {{peers}}</span>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>